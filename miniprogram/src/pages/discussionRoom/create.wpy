</style>
<template lang="pug">
  view#discussion-room-create
    view.course-name-hint(wx:if="{{!success}}") 课程名称
    form(report-submit="true" bindsubmit="bindsubmit" wx:if="{{!success}}")
      input(name="courseName" placeholder="将作为答疑室名称" maxlength="20")
      button(loading="{{loading}}" disabled="{{loading}}" form-type="submit") 创建答疑室
    view.code-panel(wx:else)
      view.hint 答疑室代码
      view.code {{code}}
      view.text 学生可以通过上方代码快速找到答疑室
      button(@tap="gotoDiscussionRoom") 进入答疑室

        

</template>

<script>
import wepy from 'wepy';
import callFunction from '../../utils/callFunction'; // 引入云函数调用的便捷封装
export default class CreateDiscussionRoom extends wepy.page {
  config = {
    navigationBarTitleText: '创建答疑室'
  };
  components = {};

  mixins = [];

  data = {
    success:false,
    loading:false,
    code:'SKK520',
    discussionRoomId:''
  };

  computed = {};

  methods = {
    async bindsubmit(e){
      this.loading = true
      this.$apply()
      let res = await callFunction('discussionRoom/create',e.detail.value)
      if(res.success){
        // 创建成功
        this.loading = false
        this.code = res.data.code
        this.success = true
        wx.showToast({
          title:'创建成功'
        })
        this.discussionRoomId = res.data.id
        this.$apply()
      } else {
        this.loading = false
        wx.showToast({
          title:res.reason,
          icon:'none'
        })
        this.$apply()
      }
    },
    gotoDiscussionRoom(){
      wx.redirectTo({
        url:'/pages/discussionRoom/detail?discussionRoomId='+this.discussionRoomId
      })
    }
  };

  events = {};

  async onLoad() {
  }
}
</script>
