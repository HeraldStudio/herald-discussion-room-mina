<style lang="less">
#discussion-room-create {
    display: block;
    .course-name-hint{
      font-size: 32rpx;
      color:#888;
      margin-left: 30rpx;
      padding-top: 40rpx;
    }
    input{
      width: 750rpx;
      border-style: solid none;
      border-width: 1rpx 0;
      border-color: #eee;
      margin-top:15rpx;
      padding: 20rpx 30rpx;
      font-size: 32rpx;
      color:#333;
      background: #f0f0f0;

    }
    button{
      background: #13ACD9;
      color: #fff;
      font-size: 32rpx;
      font-weight: bold;
      margin: 40rpx 30rpx;
      border-radius: 100rpx;
    }
    .code-panel{
      margin-top:40rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
      .hint{
        font-size:32rpx;
        color:#333;
      }
      .code{
        color:#13ACD9;
        font-weight: bold;
        font-size: 56rpx;
      }
      .text{
        font-size:24rpx;
        color:#888;
      }
    }
